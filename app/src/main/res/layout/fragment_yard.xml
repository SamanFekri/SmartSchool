<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/yardwall"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yardwall" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/electricity_flow"
        android:src="@drawable/electricity"
        android:layout_alignBottom="@+id/yardwall"
        android:layout_alignLeft="@+id/yardwall"
        android:layout_alignStart="@+id/yardwall"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />
</RelativeLayout>