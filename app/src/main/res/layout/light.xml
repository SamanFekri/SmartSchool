<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/in_class_txt"
        android:layout_above="@+id/ledimage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ledimage"
        android:src="@drawable/led_off"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CO"
        android:id="@+id/co_static_txt"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/ledimage"
        android:layout_toLeftOf="@+id/in_class_txt"
        android:layout_toStartOf="@+id/in_class_txt"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CH4"
        android:id="@+id/ch4"
        android:layout_alignTop="@+id/co_static_txt"
        android:layout_toRightOf="@+id/in_class_txt"
        android:layout_toEndOf="@+id/in_class_txt"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="120"
        android:id="@+id/co_txt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/co_static_txt"
        android:layout_alignLeft="@+id/co_static_txt"
        android:layout_alignStart="@+id/co_static_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="120"
        android:id="@+id/ch4_txt"
        android:layout_alignBottom="@+id/co_txt"
        android:layout_alignRight="@+id/ch4"
        android:layout_alignEnd="@+id/ch4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gas_alarm"
        android:src="@drawable/gas"
        android:layout_alignTop="@+id/ch4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
